<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7fafc"
    tools:context="com.example.user.firstapplication.MainActivity"
    android:fontFamily="cursive"
    android:typeface="serif">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/ic_action_back"
        app:titleTextColor="#FFF">

    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:ems="10"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/email"

        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="Already have an account?"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/password"
        android:layout_alignStart="@+id/signup" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:clickable="true"
        android:text="Log in"
        android:textColor="#fc8f23"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView6"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        android:layout_marginStart="7dp"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />


    <LinearLayout
        android:layout_width="447dp"
        android:layout_height="280dp"
        android:background="#FFF"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="-12dp"
        tools:layout_editor_absoluteY="258dp"
        android:id="@+id/linearLayout"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="SELECT AT LEAST 3 CATEGORIES OF INTEREST.    THREE RING WILL SUGGEST CONTENT."
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"/>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="220dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp"
            android:layout_marginLeft="-370dp">


            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="57dp"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="290dp" />

            <TextView
                android:id="@+id/sports"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-35dp"
                android:text=" Sports"
                android:textSize="15dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="57dp"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-25dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="290dp" />

            <TextView
                android:id="@+id/Technology"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-52dp"
                android:text="    Technology"
                android:textSize="15dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="57dp"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-8dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="290dp" />

            <TextView
                android:id="@+id/music"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-33dp"
                android:text="  Music"
                android:textSize="15dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="57dp"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-29dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="290dp" />

            <TextView
                android:id="@+id/business"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-33dp"
                android:text="  Business"
                android:textSize="15dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="57dp"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-29dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="290dp" />

            <TextView
                android:id="@+id/food"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-33dp"
                android:text="  Food"
                android:textSize="15dp"
                android:textStyle="bold" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="220dp"
            android:layout_marginTop="46dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp"
            android:layout_marginLeft="-0dp">


            <CheckBox
                android:id="@+id/checkBox6"
                android:layout_width="57dp"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="290dp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/crimedrama"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-35dp"
                android:text=" Crime drama"
                android:textSize="15dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox7"
                android:layout_width="57dp"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-23dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="290dp" />

            <TextView
                android:id="@+id/lifestyle"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-36dp"
                android:text="  Lifestyle"
                android:textSize="15dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox8"
                android:layout_width="57dp"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-14dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="290dp" />

            <TextView
                android:id="@+id/comedy"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-34dp"
                android:text="  Comedy"
                android:textSize="15dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox9"
                android:layout_width="57dp"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-29dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="290dp" />

            <TextView
                android:id="@+id/science"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-33dp"
                android:text="  Science"
                android:textSize="15dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox10"
                android:layout_width="57dp"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-29dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="290dp" />

            <TextView
                android:id="@+id/urban"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-34dp"
                android:text=" Urban"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/signup"
        android:layout_width="205dp"
        android:layout_height="52dp"
        android:text="Sign up"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="548dp"
        android:textAllCaps="false"
        android:background="@drawable/buttondropshadow"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
</ScrollView>